{
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",
    "lib":["ES2022"],
    "declaration": true,
    "outDir": "./dist",
    "declarationMap": true,
    // stops this error
    // Module '"fs"' has no default export.
    "esModuleInterop": true
  },
  "include": ["./**/*.ts"],
}